      xmlns:fx="http://javafx.com/fxml"
      fx:controller="springbootapp.gui.CoursesController"
      spacing="10" alignment="CENTER">

    <!-- Tabelle f端r Kurs端bersicht -->
    <TableView fx:id="coursesTable" prefHeight="400" prefWidth="600" onMouseClicked="#handleCourseSelection">
        <columns>
            <!-- Spalte f端r Kurs-ID -->
            <TableColumn fx:id="courseIdColumn" text="Course ID" prefWidth="200"/>
            <!-- Spalte f端r Kurs-Name -->
            <TableColumn fx:id="courseNameColumn" text="Name" prefWidth="400"/>
        </columns>
    </TableView>
</VBox>
