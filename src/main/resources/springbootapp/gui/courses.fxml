<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="springbootapp.gui.CoursesController">
    <top>
        <Label text="Courses" style="-fx-font-size: 24px; -fx-font-weight: bold;" BorderPane.alignment="CENTER"/>
    </top>
    <center>
        <VBox spacing="10" alignment="CENTER">
            <children>
                <ListView fx:id="coursesListView" prefHeight="400" prefWidth="300"/>
            </children>
        </VBox>
    </center>
    <padding>
        <Insets top="20" bottom="20" left="20" right="20"/>
    </padding>
</BorderPane>
